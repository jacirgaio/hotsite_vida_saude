}
<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-lg-6">
            <div class="col-12 p-4 border text-center bg-light">
                <div class="d-flex">
                    <img src="~/imagens/principal.jpg" alt="" class="img-fluid rounded-circle mb-3" style="object-fit: cover; width: 30%; height: 30%;">
